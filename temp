        'title': title,
        'head': head,
        'base': base,
        'body': body,
        'draft': draft
    }
    
    result = await github.api_request('POST', f'https://api.github.com/repos/{owner}/{repo}/pulls', json=data)
    return json.dumps(result, indent=2)

@mcp.tool()
